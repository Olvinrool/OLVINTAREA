<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OLVINTAREA.Paginas.IngresarDatosPage">


    <StackLayout Padding="20">
        <Label Text="Ingresar Datos del Empleado" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Entry Placeholder="Nombres" Text="{Binding Nombres}" />
        <Entry Placeholder="Apellidos" Text="{Binding Apellidos}" />
        <Entry Placeholder="Fecha de Nacimiento" Text="{Binding FechaNacimiento}" />
        <Entry Placeholder="Correo Electrónico" Text="{Binding Correo}" />
        <Button Text="Guardar" Clicked="OnGuardarClicked" />
    </StackLayout>


</ContentPage>